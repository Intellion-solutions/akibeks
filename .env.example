# Database Configuration
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=project_management
VITE_DB_USER=postgres
VITE_DB_PASSWORD=password

# JWT Configuration
VITE_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
VITE_JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASSWORD=your-email-password
VITE_SMTP_FROM_NAME=Your Company Name
VITE_SMTP_FROM_EMAIL=noreply@yourcompany.com

# File Storage Configuration
VITE_UPLOAD_MAX_SIZE=104857600
VITE_UPLOAD_ALLOWED_TYPES=image/*,application/pdf,text/*,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Application Configuration
VITE_APP_NAME=Project Management System
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3001

# Admin Configuration
VITE_ADMIN_EMAIL=admin@yourcompany.com
VITE_DEFAULT_ADMIN_PASSWORD=admin123

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Security
VITE_SESSION_SECRET=your-session-secret-change-this
VITE_ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Feature Flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_TWO_FACTOR_AUTH=false