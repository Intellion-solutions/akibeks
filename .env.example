# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_URL="postgresql://username:password@localhost:5432/akibeks_db"
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="akibeks_db"
DB_USER="username"
DB_PASSWORD="password"
DB_SSL="prefer"
DB_POOL_MIN="2"
DB_POOL_MAX="10"
DB_IDLE_TIMEOUT="30000"
DB_CONNECTION_TIMEOUT="5000"

# ===========================
# SECURITY CONFIGURATION
# ===========================
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-min-32-characters-long"
JWT_REFRESH_EXPIRES_IN="30d"

# Encryption Keys (32 character minimum)
ENCRYPTION_KEY="your-32-character-encryption-key-here"
ENCRYPTION_ALGORITHM="aes-256-gcm"
PASSWORD_SALT_ROUNDS="12"

# HMAC Signing (64 character minimum)
HMAC_SECRET="your-64-character-hmac-secret-for-data-integrity-verification"

# Session Management
SESSION_TIMEOUT="1800000"
MAX_CONCURRENT_SESSIONS="3"
ACCOUNT_LOCKOUT_ATTEMPTS="5"
ACCOUNT_LOCKOUT_DURATION="900000"

# ===========================
# API SECURITY
# ===========================
API_RATE_LIMIT_WINDOW_MS="900000"
API_RATE_LIMIT_MAX_REQUESTS="100"
CORS_ORIGIN="http://localhost:5173,https://akibeks.co.ke"
CORS_CREDENTIALS="true"

# Content Security Policy
CSP_ENABLED="true"
CSP_REPORT_URI="/api/csp-violation"

# ===========================
# APPLICATION ENVIRONMENT
# ===========================
NODE_ENV="development"
VITE_API_URL="http://localhost:3000/api"
VITE_APP_NAME="AKIBEKS Engineering Solutions"
VITE_APP_URL="https://akibeks.co.ke"
PORT="3000"

# Kenya Specific
DEFAULT_COUNTRY="KE"
DEFAULT_CURRENCY="KES"
DEFAULT_TIMEZONE="Africa/Nairobi"
VAT_RATE="0.16"

# ===========================
# SMTP CONFIGURATION
# ===========================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="noreply@akibeks.co.ke"
SMTP_PASS="your-smtp-app-password"
SMTP_FROM_NAME="AKIBEKS Engineering Solutions"
SMTP_FROM_EMAIL="noreply@akibeks.co.ke"

# Email Templates
EMAIL_TEMPLATE_DIR="./src/templates/email"
ADMIN_EMAIL="admin@akibeks.co.ke"
SUPPORT_EMAIL="support@akibeks.co.ke"

# ===========================
# FILE STORAGE
# ===========================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx"
STORAGE_TYPE="local"

# Cloud Storage (if using)
AWS_REGION="us-east-1"
AWS_S3_BUCKET="akibeks-files"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# ===========================
# LOGGING & MONITORING
# ===========================
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES="5"
LOG_DATE_PATTERN="YYYY-MM-DD"

# Error Tracking
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="development"

# ===========================
# SEO CONFIGURATION
# ===========================
SEO_DEFAULT_TITLE="AKIBEKS Engineering Solutions - Expert Construction Services in Kenya"
SEO_DEFAULT_DESCRIPTION="Leading construction and engineering company in Kenya providing quality building, renovation, and infrastructure services across all 47 counties."
SEO_DEFAULT_KEYWORDS="construction Kenya,engineering services,building contractors Nairobi,renovation Kenya,infrastructure development"
SEO_SITE_NAME="AKIBEKS Engineering Solutions"
SEO_SITE_URL="https://akibeks.co.ke"
SEO_LOGO_URL="https://akibeks.co.ke/logo.png"
SEO_TWITTER_HANDLE="@akibekseng"
SEO_FACEBOOK_PAGE="akibeksengineering"

# Google Services
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_SEARCH_CONSOLE_ID="your-search-console-id"
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================
# PAYMENT INTEGRATION (Kenya)
# ===========================
MPESA_CONSUMER_KEY="your-mpesa-consumer-key"
MPESA_CONSUMER_SECRET="your-mpesa-consumer-secret"
MPESA_ENVIRONMENT="sandbox"
MPESA_SHORTCODE="174379"
MPESA_PASSKEY="your-mpesa-passkey"
MPESA_CALLBACK_URL="https://akibeks.co.ke/api/mpesa/callback"

# Banking
KCB_API_KEY="your-kcb-api-key"
EQUITY_API_KEY="your-equity-api-key"

# ===========================
# CACHE & PERFORMANCE
# ===========================
REDIS_URL="redis://localhost:6379"
CACHE_TTL="3600"
STATIC_CACHE_TTL="86400"

# CDN
CDN_URL="https://cdn.akibeks.co.ke"
CDN_ENABLED="false"

# ===========================
# BACKUP & RECOVERY
# ===========================
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
BACKUP_STORAGE_PATH="./backups"

# ===========================
# DEVELOPMENT TOOLS
# ===========================
DEBUG_MODE="false"
API_DOCS_ENABLED="true"
SWAGGER_UI_PATH="/api-docs"

# Hot Reload
VITE_HMR_PORT="24678"
VITE_HMR_HOST="localhost"